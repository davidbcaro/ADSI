@model IEnumerable<ChronoOfTime.Models.Instructor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.disponibility.typeDis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.document.documento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.linkup.typeLink)
