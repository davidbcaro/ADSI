@model Tidsplan.Models.IndexViewModel
@{
    ViewBag.Title = "Configuración";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Cambiar la configuración de la cuenta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Contraseña:</dt>
        <dd>
            
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Cambiar la contraseña", "ChangePassword", null, new { @class = "btn btn-primary navbar-ini" })
            }
            else
            {
                @Html.ActionLink("Crear", "SetPassword")
            }
            
        </dd>
        <br>
        <dt>Registrar un nuevo usuario:</dt>
        <dd>
            
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Registrar", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink",  @class = "btn btn-primary navbar-ini" })
            }
          
            
        </dd>
        
