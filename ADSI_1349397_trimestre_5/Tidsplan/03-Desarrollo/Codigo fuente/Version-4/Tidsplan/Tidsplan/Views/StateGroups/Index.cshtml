@model IEnumerable<Tidsplan.Models.StateGroup>

@{
    ViewBag.Title = "Estado de Grupo";
}

<h2>Estado de la Ficha</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.toUpper)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.toUpper)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.stateGroupID }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Detalles", "Details", new { id = item.stateGroupID }, new { @class = "btn btn-info" })  
                @Html.ActionLink("Borrar", "Delete", new { id = item.stateGroupID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
