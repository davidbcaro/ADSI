@model IEnumerable<BaseDeDatosWarioSoft.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-success" })
</p>
<div class="table-responsive">

    <table class="table table-condensed" style="border-radius: 6px; background-color: #2999a5">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CodeProject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th></th>
            </tr>
        </thead>
            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodeProject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdProject }, new { @class = "btn btn-warning btn-xs btn-block" })
                    @Html.ActionLink("Details", "Details", new { id = item.IdProject }, new { @class = "btn btn-info btn-xs btn-block" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdProject }, new { @class = "btn btn-danger btn-xs btn-block" })
                </td>
            </tr>
    }

    </table>
    </div>