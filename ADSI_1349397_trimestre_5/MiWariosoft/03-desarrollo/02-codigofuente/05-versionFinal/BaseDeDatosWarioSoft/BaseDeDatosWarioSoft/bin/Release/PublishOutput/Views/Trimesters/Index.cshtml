@model IEnumerable<BaseDeDatosWarioSoft.Models.Trimester>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-success" })
</p>
<div class="table-responsive">

    <table class="table table-condensed" style="border-radius: 6px; background-color: #2999a5">
        <thead>
            <tr>
                <th>
                    <center>@Html.DisplayNameFor(model => model.Description)</center> 
                </th>
                <th>
                    <center>@Html.DisplayNameFor(model => model.InitialDate)</center> 
                </th>
                <th>
                    <center>@Html.DisplayNameFor(model => model.EndDate)</center> 
                </th>
                <th></th>
            </tr>
        <thead>
            @foreach (var item in Model)
        {
            <tr>
                <td>
                    <center>@Html.DisplayFor(modelItem => item.Description)</center>
                </td>
                <td>
                    <center>@Html.DisplayFor(modelItem => item.InitialDate)</center> 
                </td>
                <td>
                    <center>@Html.DisplayFor(modelItem => item.EndDate)</center>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdTrimester }, new { @class = "btn btn-warning btn-xs btn-block" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.IdTrimester }, new { @class = "btn btn-info btn-xs btn-block" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdTrimester }, new { @class = "btn btn-danger btn-xs btn-block" })
                </td>
            </tr>
    }

    </table>
    </div>
