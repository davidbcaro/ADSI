@model IEnumerable<BaseDeDatosWarioSoft.Models.Activity>

        @{
            ViewBag.Title = "Activities";
        }

        <h2>Actividades</h2>

        <p>
            @Html.ActionLink("Crear nueva actividad", "Create", new { }, new { @class = "btn btn-success" })
        </p>
        <div class="table-responsive">
            <table class="table table-condensed" style="border-radius: 6px; background-color: #2999a5">

                <thead>
                    <tr>
                        <th>
                            <center> Descripcion de las actividades</center>
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                <center> @Html.DisplayFor(modelItem => item.nameActivity)</center>
                            </td>
                            <td>
                                <center>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.IdActivity }, new { @class = "btn btn-warning btn-xs btn-block" })
                                    @Html.ActionLink("Detalles", "Details", new { id = item.IdActivity }, new { @class = "btn btn-info btn-xs btn-block" })
                                    @Html.ActionLink("Borrar", "Delete", new { id = item.IdActivity }, new { @class = "btn btn-danger btn-xs btn-block" })
                                </center>
                            </td>
                        </tr>
                    }

            </table>
        </div>
