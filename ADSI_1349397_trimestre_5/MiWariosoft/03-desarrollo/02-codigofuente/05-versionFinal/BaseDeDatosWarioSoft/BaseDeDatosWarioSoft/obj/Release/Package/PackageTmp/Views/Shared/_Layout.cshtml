<!DOCTYPE html>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Wariosoft</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon"href="~/Imagenes/Wario.ico">

</head>
<body>

    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Wariosoft", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
             
                    @Html.Partial("_LoginPartial")

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Administrador
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Especialidades", "Index", "Specialties")</li>
                            <li>@Html.ActionLink("Tipo de documento", "Index", "TypeDocuments")</li>
                            <li>@Html.ActionLink("Usuarios", "Index", "Users")</li>
                            <li>@Html.ActionLink("Vinculación", "Index", "Linkages")</li>

                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Horario
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ambientes", "Index", "Environments")</li>
                            <li>@Html.ActionLink("Horarios", "Index", "Shedules")</li>
                            <li>@Html.ActionLink("Modalidades", "Index", "Modalities")</li>
                            <li>@Html.ActionLink("Sedes", "Index", "Headquarters")</li>


                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Ficha
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Fases", "Index", "Phases")</li>
                            <li>@Html.ActionLink("Fichas", "Index", "Groups")</li>
                            <li>@Html.ActionLink("Jornada", "Index", "WorkingDays")</li>
                            <li>@Html.ActionLink("Proyectos", "Index", "Projects")</li>
                            <li>@Html.ActionLink("Trimestres", "Index", "Trimesters")</li>
                            <li>@Html.ActionLink("Versiones", "Index", "Versions")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Formación
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Actividades", "Index", "Activities")</li>
                            <li>@Html.ActionLink("Competencias", "Index", "Competitions")</li>
                            <li>@Html.ActionLink("Nivel de formación", "Index", "TrainingLevels")</li>
                            <li>@Html.ActionLink("Programas", "Index", "Programs")</li>
                            <li>@Html.ActionLink("Resultado de aprendizajes", "Index", "LearningOutcomes")</li>

                        </ul>
                    </li>
                </ul>

            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Wariosoft</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
