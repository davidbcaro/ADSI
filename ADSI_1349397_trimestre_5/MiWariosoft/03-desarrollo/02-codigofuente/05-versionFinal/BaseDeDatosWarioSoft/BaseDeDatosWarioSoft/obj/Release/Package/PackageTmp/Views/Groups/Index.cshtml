@model IEnumerable<BaseDeDatosWarioSoft.Models.Group>

@{
    ViewBag.Title = "Index";
}

<h2>Ficha</h2>

<p>
    @Html.ActionLink("Crear nueva ficha", "Create", new { }, new { @class = "btn btn-success" })
</p>
@using (Html.BeginForm())
{
    <p>
        Buscar por ficha: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<div class="table-responsive">
    <table class="table table-condensed" style="border-radius: 6px; background-color: #2999a5">

        <thead>
            <tr>
                <th>
                    <center>  @Html.DisplayNameFor(model => model.NumberGroup)</center>
                </th>
                <th>
                    <center> @Html.DisplayNameFor(model => model.InitialDate)</center></th>
                <th>
                    <center> @Html.DisplayNameFor(model => model.EndDate)</center></th>
                <th>
                    <center> @Html.DisplayNameFor(model => model.Trimester.Description)</center></th>
                <th>
                    <center> @Html.DisplayNameFor(model => model.Project.FullName)</center>  </th>
                <th>
                    <center> @Html.DisplayNameFor(model => model.Competition.CodeCompetition)</center></th>
                <th>
                    <center> @Html.DisplayNameFor(model => model.Version.NameVersion)</center></th>
                <th>
                    <center> @Html.DisplayNameFor(model => model.Program.FullName)</center></th>
                <th>
                    <center> @Html.DisplayNameFor(model => model.WorkingDay.desciption)</center></th>
                <th></th>
            </tr>
        <thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <center> @Html.DisplayFor(modelItem => item.NumberGroup)</center></td>
                    <td>
                        <center>  @Html.DisplayFor(modelItem => item.InitialDate)</center></td>
                    <td>
                        <center> @Html.DisplayFor(modelItem => item.EndDate)</center></td>
                    <td>
                        <center> @Html.DisplayFor(modelItem => item.Trimester.Description)</center></td>
                    <td>
                        <center>  @Html.DisplayFor(modelItem => item.Project.FullName)</center></td>
                    <td>
                        <center> @Html.DisplayFor(modelItem => item.Competition.CodeCompetition)</center></td>
                    <td>
                        <center> @Html.DisplayFor(modelItem => item.Version.NameVersion)</center></td>
                    <td>
                        <center>  @Html.DisplayFor(modelItem => item.Program.FullName)</center></td>
                    <td>
                        <center> @Html.DisplayFor(modelItem => item.WorkingDay.desciption)</center></td>
                    <td>
                        <center>
                            @Html.ActionLink("Editar", "Edit", new { id = item.IdGroup }, new { @class = "btn btn-warning btn-xs btn-block " }) 
                            @Html.ActionLink("Detalles", "Details", new { id = item.IdGroup }, new { @class = "btn btn-info btn-xs btn-block" }) 
                            @Html.ActionLink("Borrar", "Delete", new { id = item.IdGroup }, new { @class = "btn btn-danger btn-xs btn-block" })
                        </center></td>
                </tr>
            }

</table>
    </div>